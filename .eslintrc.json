{
  "extends": ["recommended/packages/esnext", "recommended/packages/esnext/style-guide", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true
  },
  "overrides": [
    {
      "files": "script/*",
      "env": {
        "node": true
      },
      "rules": {
        "import/no-commonjs": [2, { "allowRequire": true }],
        "import/no-nodejs-modules": 0
      }
    }
  ]
}
